{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Table type schema",
  "description": "",
  "type": "object",
  "definitions":{

    "indicator": {
      "type": "array",
      "title": "Indicator",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "title": "Code",
            "type": "integer"
          },
          "label": {
            "title": "Label",
            "type": "string"
          },
          "measurement_unit": {
            "title": "Unit of Measurement",
            "type": "string"
          }
        },
        "required":["code","label","measurement_unit"]
      }
    },

    "feature": {
      "type": "array",
      "title": "Feature",
      "items": {
        "type": "object",
        "properties": {
          "name":{
            "type": "string",
            "title": "Feature name"
          },
          "data_type":{
            "type": "string",
            "title": "Data type",
            "enum_":[
              "integer",
              "double",
              "string",
              "boolean",
              "date"
            ],
            "description":"Data type for the feature. <br><br> `integer` - Numeric values with no floating point values <br><br> `double` - Numeric values with floating point values <br><br> `string` - Text data <br><br> `date` - Date in ISO formats **YYYY-mm-dd** OR **YYYY-mm-ddTHH:MM:ss** or Unix epoch format **integer** "
          },
          "code_list": {
            "type": "array",
            "title": "Feature code list",
            "items": {
              "type": "object",
              "properties": {
                "code": {
                  "title": "Code",
                  "type": "integer"
                },
                "label": {
                  "title": "Label",
                  "type": "string"
                }
              }
            }
          }
        },
        "required":["name"]
      }
    }
  
    
  },
    "properties": {                
      "db_id": {
        "type": "string",
        "description": "Database ID"
      },
      "table_id": {
        "type": "string",
        "description": "Table ID number"
      },

      "title": {
        "type": "string",
        "description": "Table title"
      },

      "description": {
        "type": "string",
        "description": "Table description"
      },
      
      "indicators": {
        "allOf": [ 
          {"$ref":"#/definitions/indicator"}
        ],
        "title":"Indicators"
      },

      "features": {
        "allOf": [ 
          {"$ref":"#/definitions/feature"}
        ],
        "title":"Features"
      },

      "geo_features": {
        "type": "array",
        "title": "List of Geographic features",
        "description": "Names of all geographic fields e.g. geo_level, state, district, subdistrict, village etc.",
        "items": {
          "type": "string"          
        }
      }
  },
  "required":["db_id","table_id","title"]
}
