          },
          "uri": {
            "title": "URI",
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "keyword": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
